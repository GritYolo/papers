/* pages/settings/settings.wxss */
.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx;
  border-radius: 50%;
}

.userinfo {
  display: flex;
  left: 2px;
  color: #000;
  margin-left: 15px;
}

.gzlheader {
  background-image: linear-gradient(180deg, #ff4, #fff);
  display: flex;
}

.gzlspace {
  height: 10px;
  background-color: #f5f5f5;
  clear: both;
  border: solid #ddd 1px;
  border-left: none;
  border-right: none;
}

.bg-white {
  background-color: white;
}

.float-right {
  float: right;
}

.float-left {
  float: left;
}

.text-color {
  color: gray;
}

.border-buttom {
  border: solid #ddd 1px;
  border-left: none;
  border-right: none;
  border-top: none;
}